<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdviceResultActivity"
    android:id="@+id/advice_card"
    android:background="@drawable/image_1"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/cangThang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stressType"
        style="@style/AppTheme.TextView"
        android:textAlignment="center"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="0dp"
        android:textSize="36sp"
        android:paddingHorizontal="23dp"
        android:text="@string/stress_name"
        />

    <TextView
        android:id="@+id/stressType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/cangThang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AppTheme.TextViewBold"
        android:text="@string/stress_time"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:paddingHorizontal="20dp"
        android:textSize="36sp"/>


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/description_stress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/AppTheme.TextViewBold"
        android:textColor="@color/white"
        android:text="@string/des_stress_time"
        android:paddingHorizontal="40dp"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>